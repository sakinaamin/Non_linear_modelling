library(car)
d_new <- d %>% filter(age_group == "60-80")
age <- d$AGE
d1 <- d$Module_6
can <- d$PrELA
model <- lm(age~d1)
# summary(model)
crPlots(model)

pdf("MLR_BCR_with_age.pdf")
plots <- list()
for (col_name in names(d)) {
  if (is.numeric(d[[col_name]])) {
    d1 <- d[[col_name]]
    model <- lm(age ~ d1)
    if (!is.null(model$coefficients)) {
      p <- car::crPlots(model)
      plots[[col_name]] <- p
    } else {
      print(paste("Invalid model for variable:", col_name))
    }
  }
}
dev.off()

